h3
  | 系统用户清单
  a.pull-right.btn.btn-sm.btn-labeled.btn-info(ui-sref="app.accounts-add") 
    span.btn-label
      i.icon-plus
    | 新增
  from.pull-right.col-sm-3
    .input-group
      span.input-group-addon
        .icon-magnifier
      input.form-control(type='text', placeholder="输入用户名字", ng-model="filter.text", ui-keypress="{13:'tableParams.reload()'}")
  
.container-fluid
  
  .panel.panel-default
    .table-responsive
      table.table.table-bordered.table-striped(ng-table='tableParams')
        tbody
          tr(ng-repeat='entity in $data' ui-sref='app.account({accountId: entity.id})')
            td(data-title="'用户名'") {{entity.email}}
            td(data-title="'用户真名'") {{entity.name}}
            td(data-title="'工作岗位'") {{entity.job}}
            td(data-title="'联系电话'") {{entity.phone}}
            td(data-title="'电子邮件'") {{entity.email}}
            td(data-title="'注册日期'") {{entity.created}}